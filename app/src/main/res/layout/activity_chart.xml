        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/buttonShare"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/share"
            />
    </LinearLayout>
</LinearLayout>
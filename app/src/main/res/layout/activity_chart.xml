<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChartActivity"
    android:orientation="vertical"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="3"
        android:padding="10dp"
        >
        <Button
            android:id="@+id/buttonPrevWeek"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:background="@drawable/left_arrow"
            />
        <TextView
            android:id="@+id/textChartFromDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28Oct+"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/textChart1Move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="228 Move"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="#3f48cc"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/textChart1Active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="133:145"
            android:textAlignment="center"
            android:textColor="#22b14c"
            android:layout_weight="1"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/buttonNextWeek"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:background="@drawable/right_arrow"
            />
    </LinearLayout>
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="3"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/buttonPrevMonth"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:background="@drawable/left_arrow"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:weightSum="3"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Past 4W"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/text4wMove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="317 Move"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="#3f48cc"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/text4wActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="186:215"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="#22b14c"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:weightSum="3"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Past 3M"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/text3mMove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="317 Move"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="#3f48cc"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/text3mActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="186:215"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="#22b14c"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/buttonNextMonth"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:background="@drawable/right_arrow"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart2"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
